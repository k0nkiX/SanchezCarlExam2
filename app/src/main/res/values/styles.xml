        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="textview_7">
        <item name="android:layout_width">271dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/imageView3</item>
        <item name="android:layout_alignStart">@+id/textureView</item>
        <item name="android:text">The son of Kazuya Mishima and grandson of Heihachi Mishima. He was the one that plunged the world into chaos in the hopes of saving it from a great evil. He is also one of the few people with the "Devil Gene"</item>
        <item name="android:textColor">@android:color/white</item>

    </style>


